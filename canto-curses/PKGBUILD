pkgname=canto-curses
pkgver=0.8.4
pkgrel=2
pkgdesc="ncurses user interface for canto-daemon"
url="http://codezen.org/canto-ng/"
license="GPL"
arch=('any')
depends=('python' 'ncurses' 'canto-daemon>=0.8.2')
source=(http://codezen.org/static/${pkgname}-${pkgver}.tar.gz)
md5sums=('7629cc292781c50410641d74931576cf')


package() {
    cd ${pkgname}-${pkgver}

    python setup.py install --prefix=/usr --root=${pkgdir}
}
