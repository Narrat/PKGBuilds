# Maintainer: Lex Black <autumn-wind at web dot de>

pkgname=canto-curses
pkgver=0.8.4
pkgrel=1
pkgdesc="A ncurses user interface for canto-daemon"
url="http://codezen.org/canto-ng/"
license="GPL"
arch=('i686' 'x86_64')
makedepends=('python')
depends=('python' 'ncurses' 'canto-daemon>=0.8.2')
source=(http://codezen.org/static/${pkgname}-${pkgver}.tar.gz)
md5sums=('7629cc292781c50410641d74931576cf')
conflicts=('canto-curses-git')

package() {
	cd ${pkgname}-${pkgver}

	msg "Starting install process."
	python setup.py install --root=${pkgdir}
}
