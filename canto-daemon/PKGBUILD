# Maintainer: Lex Black <autumn-wind at web dot de>

pkgname=canto-daemon
pkgver=0.8.2
pkgrel=2
pkgdesc="News aggregator for Atom/RSS/RDF"
url="http://codezen.org/canto-ng/"
license=('GPL')
arch=('any')
depends=('python' 'python-feedparser')
makedepends=('python')
optdepends=('canto-curses: Curses interface')
source=(http://codezen.org/static/${pkgname}-${pkgver}.tar.gz)
md5sums=('f8054051cdbd13a297ef8155e7848fcb')


package() {
    cd ${pkgname}-${pkgver}

    python setup.py install --prefix=/usr --root=${pkgdir}
}
