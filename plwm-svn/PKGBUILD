_pkgname=plwm
pkgname=plwm-svn
pkgver=235
pkgrel=3
pkgdesc="The Pointless Window Manager"
arch=('i686' 'x86_64')
url="http://plwm.sourceforge.net/"
license=('GPL')
depends=('python2' 'python-xlib')
makedepends=('subversion')
source=('plwm::svn+https://plwm.svn.sourceforge.net/svnroot/plwm/trunk')
md5sums=('SKIP')

pkgver() {
	cd "${SRCDEST}/${_pkgname}"
	svn log -r COMMITTED | grep -Eo 'r[[:digit:]]{1,9}' | sed -e 's/r//'
	#svnversion
}

package() {
	cd $srcdir/$_pkgname

	python2 ./setup.py install --root=$pkgdir --prefix=/usr
}
